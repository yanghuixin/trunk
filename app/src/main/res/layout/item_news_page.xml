<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/item_news_layout">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:background="@mipmap/temp_new_list"
        android:id="@+id/item_news_iv"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:layout_toRightOf="@id/item_news_iv"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/item_news_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:layout_toRightOf="@id/item_news_iv"
        android:layout_below="@id/item_news_title"
        android:layout_marginTop="12dp"
        android:layout_marginRight="80dp"
        android:padding="0dp"
        android:textSize="16sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text=""
        android:id="@+id/item_news_desc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_news_iv"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_text"
        android:id="@+id/item_news_time"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_text"
        android:id="@+id/item_news_num"
        />


</RelativeLayout>
