<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.witiot.cloudbox.views.device.DeviceReportFragment"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/clear"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="故障描述：" />

            <EditText
                android:id="@+id/edt_reportContent"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_focused"
                android:ems="10"
                android:gravity="top"
                android:hint="请输入设备故障描述"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:textColor="@color/blue_text"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColorHint="@color/disable" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:background="@color/clear"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:text="    报修人："
                android:gravity="center"  />

            <com.witiot.cloudbox.widget.ClearEditText
                android:id="@+id/edt_reportMan"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_focused"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:hint="请输入"
                android:layout_alignParentRight="true"
                android:inputType="text"
                android:maxLength="20"
                android:textSize="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="@color/disable"   />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:text="手机号码："
                android:gravity="center"  />

            <com.witiot.cloudbox.widget.ClearEditText
                android:id="@+id/edt_reportMobile"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:maxLength="11"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_focused"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:hint="请输入"
                android:inputType="number"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="@color/disable" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_device_report"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn_resetpwd_bg"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="立即报修"/>

    </LinearLayout>

</LinearLayout>
