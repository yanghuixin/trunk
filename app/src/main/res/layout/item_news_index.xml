<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/item_news_layout">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@mipmap/temp_new_list"
        android:id="@+id/item_news_iv"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:layout_toRightOf="@id/item_news_iv"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/item_news_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_news_iv"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_text"
        android:id="@+id/item_news_time"
        android:layout_marginRight="90dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_text"
        android:id="@+id/item_news_num"
        />
</RelativeLayout>
