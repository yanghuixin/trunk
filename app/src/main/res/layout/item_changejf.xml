<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/item_order_layout"
    android:minHeight="60dp"
    android:background="@drawable/bg_radius_white"
    android:layout_marginBottom="12dp" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/item_bill_img"
        android:background="@color/grey_cccccc"
        android:layout_marginRight="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/item_patientName"
        android:text=""
        android:layout_toRightOf="@id/item_bill_img"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/item_bill_img">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/item_patientName"
        android:text="自费金额："
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_bill_img"
        android:id="@+id/item_price_tip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/item_patientName"
        android:id="@+id/item_price"
        android:text="500"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_price_tip"
        />

    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="16sp"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/item_patientName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:text="获得积分："
        android:layout_marginRight="50dp"
        android:id="@+id/item_score_tip"
        android:layout_alignBaseline="@id/item_price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/failreason"
        android:layout_toRightOf="@id/item_bill_img"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_below="@id/item_price_tip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:text="2002"
        android:id="@+id/item_score"
        android:layout_marginLeft="50dp"
        android:layout_alignBaseline="@id/item_price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/red_button"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16sp"
        android:id="@+id/item_delete"/>

</RelativeLayout>
