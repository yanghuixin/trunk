<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/item_order_layout"
    android:minHeight="60dp"
    android:background="@drawable/bg_radius_white"
    android:layout_marginBottom="12dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text="No."
        android:id="@+id/item_no_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/item_no"
        android:layout_toRightOf="@id/item_no_title"
        android:text="238923892893219"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"
        android:layout_marginTop="32dp">
    </View>

    <TextView
        android:id="@+id/item_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text="有效期："
        android:layout_below="@id/item_no"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/item_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:textSize="24sp"
        android:text="500 MB"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/item_no"
        android:layout_toRightOf="@id/item_dt"
        android:layout_alignBaseline="@id/item_dt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/item_time"
        android:layout_alignParentRight="true"
        android:text="2018-01-01"
        />


    <TextView
        android:id="@+id/item_true_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_button"
        android:textSize="20sp"
        android:text="¥35"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/item_special"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_button"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/item_special"
        android:text="未支付"
        android:id="@+id/item_pay_status"
        android:layout_marginLeft="50dp"
        />

</RelativeLayout>
