<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.witiot.cloudbox.views.secure.SecureFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/blue_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/shoushuyiwaxian_title"
            android:drawablePadding="12dp"
            android:text="手术意外险"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="关闭视频"
            android:textColor="@color/white"
            android:id="@+id/close"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:id="@+id/ywx_what"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_1"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="什么是手术意外险"
                android:textColor="@color/blue_text"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/ywx_need_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"

                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_5"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="理赔须知"
                android:textColor="@color/orange_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/ywx_yiyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"

                android:layout_weight="1"
                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_2"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="手术意外险的意义"
                android:textColor="@color/blue_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

            <TextView
                android:id="@+id/ywx_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"

                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_6"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="常见问题"
                android:textColor="@color/orange_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/ywx_baofei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"

                android:layout_weight="1"
                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_3"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="保费和保障"
                android:textColor="@color/blue_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

            <TextView
                android:id="@+id/ywx_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"

                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_7"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="公司介绍"
                android:textColor="@color/orange_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/ywx_jifen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"

                android:layout_weight="1"
                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_4"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="积分返还政策"
                android:textColor="@color/blue_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

            <TextView
                android:id="@+id/ywx_anli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"

                android:background="@drawable/bg_get_code"
                android:drawableLeft="@mipmap/ywx_8"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="50dp"
                android:paddingTop="16dp"
                android:text="理赔案例"
                android:textColor="@color/orange_text"
                android:textSize="18sp"
                android:drawablePadding="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/ywx_bottom"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/ywx_bottom"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="left|center"
                >

                <CheckBox
                    android:id="@+id/ywx_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签署"
                    android:textSize="18sp"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="60dp"
                    android:checked="true"/>

                <TextView
                    android:id="@+id/ywx_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="18dp"
                    android:text="《医疗意外知情同意书》"
                    android:textColor="@color/blue_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ywx_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_camera"
                android:drawablePadding="6dp"
                android:gravity="left|center"
                android:paddingBottom="16dp"
                android:paddingLeft="65dp"
                android:paddingTop="18dp"
                android:text="扫一扫，在线投保"
                android:textColor="@color/orange_text"
                android:textSize="18sp" />
        </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:id="@+id/h5_content"
                android:padding="100dp">

            </RelativeLayout>

            <TextView
                android:id="@+id/video_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingBottom="60dp"
                android:text="视频约4分钟，首次请耐心观看"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
